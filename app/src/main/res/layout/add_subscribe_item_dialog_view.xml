<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/subscribeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="450dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/subscribeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="450dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/subscribeTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/subscribeLayout">

        <RadioButton
            android:id="@+id/typeBookName"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/book_name_title"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/typeAuthorName"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/author_title"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/typeGenre"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/genre_title"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/typeSequence"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/sequence_title"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            app:buttonCompat="@null" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/subscribeStrictGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/subscribeTypeGroup">

        <RadioButton
            android:id="@+id/strictSubscribe"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/strict_condition_title"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            app:buttonCompat="@null" />

        <RadioButton
            android:id="@+id/softSubscribe"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/soft_filter_title"
            android:textColor="@color/radio_text_color"
            android:textSize="11sp"
            app:buttonCompat="@null" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>